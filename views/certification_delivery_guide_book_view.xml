                            </group>
                            <group>
                                <field name="guides_invoiced" readonly="1"/>
                                <field name="guides_cancelled" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook invisible="not guides_found">
                            <page string="Vista Previa">
                                <field name="guide_preview" readonly="1" widget="html"/>
                            </page>
